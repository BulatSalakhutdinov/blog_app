<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<div>
			<h3>
				<%= pluralize(@post.errors.count, "error") %> prohibited
        		this article from being saved:
			</h3>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>
<p><%= link_to "Back to posts", posts_path %></p>