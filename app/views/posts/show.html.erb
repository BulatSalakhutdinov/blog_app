<p>
	<strong>Title: </strong>
	<%= @post.title %>
</p>
<p>
	<strong>Text: </strong>
	<%= @post.text %>
</p>
<p><%= link_to "Edit", edit_post_path(@post) %>
	<%= link_to "Delete", post_path(@post),
					method: :delete,
					data: { confirm: 'Are you sure?' } %></p>
<p><%= link_to "Back to posts", posts_path %></p>