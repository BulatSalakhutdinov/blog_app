<% provide(:title, "Sign in") %>
<h1>Sign in</h1>
<%= form_for(:session, url: sessions_path) do |f| %>
	<p><%= f.label :email %></p>
	<p><%= f.text_field :email %></p>

	<p><%= f.label :password %></p>
	<p><%= f.password_field :password %></p>

	<p><%= f.submit "Sign in" %></p>
	<p>New user? <%= link_to "Sign up now!", signup_path %></p>
<% end %>